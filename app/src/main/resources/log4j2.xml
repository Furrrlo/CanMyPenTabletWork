<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} %-5level %logger{1.} [%t] - %msg %ex%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>

        <Logger name="com.github.furrrlo.cmptw.app.CanMyPenTabletWork"
                additivity="false"
                level="trace">
            <AppenderRef ref="console"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
